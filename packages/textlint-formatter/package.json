    "concat-stream": "^1.5.1",
    "js-yaml": "^3.2.4",
    "optionator": "^0.8.1",
    "pluralize": "^2.0.0",
    "string-width": "^1.0.1",
    "string.prototype.padstart": "^3.0.0",
    "strip-ansi": "^3.0.1",
    "table": "^3.7.8",
    "text-table": "^0.2.0",
    "try-resolve": "^1.0.1",
    "xml-escape": "^1.0.0"
